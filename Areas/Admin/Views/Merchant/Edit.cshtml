@model CreditManagementSystemApp.ViewModels.Merchant.MerchantEditVM

@{
    ViewData["Title"] = "Edit Merchant";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12" style="max-width: 460px;">
            <!-- Kartın eni 460px -->
            <div class="card shadow-sm rounded-3 border-0">
                <div class="card-header bg-dark text-white text-center py-3 rounded-top-3">
                    <h3 class="mb-0 fw-bold text-uppercase">
                        <i class="fas fa-edit me-2"></i> Edit Merchant
                    </h3>
                </div>

                <div class="card-body p-3">
                    <form asp-action="Edit" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <input type="hidden" asp-for="Id" />  <!-- İD-ni gizli saxla -->

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold text-dark"></label>
                            <input asp-for="Name" class="form-control form-control-md rounded-2 shadow-sm" placeholder="Enter merchant name..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-semibold text-dark"></label>
                            <input asp-for="Address" class="form-control form-control-md rounded-2 shadow-sm" placeholder="Enter merchant address..." />
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold text-dark"></label>
                            <input asp-for="PhoneNumber" class="form-control form-control-md rounded-2 shadow-sm" placeholder="Enter phone number..." />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-semibold text-dark"></label>
                            <input asp-for="Email" type="email" class="form-control form-control-md rounded-2 shadow-sm" placeholder="Enter email address..." />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success btn-md rounded-pill px-4 shadow-sm">
                                <i class="fas fa-check-circle me-2"></i> Save Merchant
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-md rounded-pill px-4 shadow-sm">
                                <i class="fas fa-arrow-left me-2"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-muted text-center fst-italic small rounded-bottom-3">
                    Please verify all information before saving.
                </div>
            </div>
        </div>
    </div>
</div>

@model CreditManagementSystemApp.ViewModels.Merchant.MerchantVM

@{
    ViewData["Title"] = "Delete Merchant";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6 col-xl-5" style="max-width: 520px;">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-danger text-white text-center py-3 rounded-top-4">
                    <h4 class="mb-0 fw-bold text-uppercase">
                        <i class="fas fa-exclamation-triangle me-2"></i> Delete Merchant Confirmation
                    </h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="text-center mb-4 text-danger fw-semibold">
                        Are you sure you want to delete this merchant?
                    </h5>
                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold text-secondary">Name:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Address:</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Phone Number:</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>

                    <form asp-action="Delete" asp-controller="Merchant" asp-route-id="@Model.Id" method="post" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg rounded-pill px-4 shadow-sm">
                            <i class="fas fa-trash-alt me-2"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-4 shadow-sm">
                            <i class="fas fa-arrow-left me-2"></i> Cancel
                        </a>
                    </form>
                </div>
                <div class="card-footer text-muted text-center fst-italic small rounded-bottom-4">
                    This action cannot be undone.
                </div>
            </div>
        </div>
    </div>
</div>

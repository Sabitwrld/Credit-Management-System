@model IEnumerable<CreditManagementSystemApp.ViewModels.Merchant.MerchantVM>

@{
    ViewData["Title"] = "Merchants";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 text-primary fw-bold">Merchants List</h1>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fas fa-plus me-2"></i> Add New Merchant
        </a>
    </div>

    <div class="card shadow-sm rounded-3 border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-dark text-white text-center">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col" class="text-start">Name</th>
                            <th scope="col" class="text-start">Address</th>
                            <th scope="col">Phone Number</th>
                            <th scope="col">Email</th>
                            <th scope="col" style="width: 150px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var merchant in Model)
                            {
                                <tr class="text-center">
                                    <td>@merchant.Id</td>
                                    <td class="text-start">@merchant.Name</td>
                                    <td class="text-start">@merchant.Address</td>
                                    <td>@merchant.PhoneNumber</td>
                                    <td>@merchant.Email</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@merchant.Id" class="btn btn-sm btn-warning me-1" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@merchant.Id" class="btn btn-sm btn-info text-white me-1" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@merchant.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    No merchants available. <a asp-action="Create">Create a new merchant</a>.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
